<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="SearchStations" fileName="logs/searchStation.log">
            <MarkerFilter marker="Search" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

<!--        <File name="SearchStations" fileName="logs/searchStation.log">-->
<!--            <MarkerFilter marker="Search" onMatch="ACCEPT" onMismatch="DENY"/>-->
<!--            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>-->
<!--        </File>-->

        <File name="SearchStationsNotFound" fileName="logs/input_errors.log">
            <MarkerFilter marker="StationsNotFound" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="Exception" fileName="logs/exceptions.log">
            <MarkerFilter marker="Exceptions" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <root level="info">
            <appender-ref ref="SearchStations" level="info"/>
            <appender-ref ref="SearchStationsNotFound" level="info"/>
            <appender-ref ref="Exception" level="error"/>
        </root>
    </loggers>
</configuration>