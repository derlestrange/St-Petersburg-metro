<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="SearchStations" fileName="logs/search.log">
            <MarkerFilter marker="SearchExistStations" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="SearchStationsNotFound" fileName="logs/input_errors.log">
            <MarkerFilter marker="StationsNotFound" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="Exception" fileName="logs/exceptions.log">
            <MarkerFilter marker="Exceptions" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <logger name="StationsNotFoundLogger" level="info" >
            <appender-ref ref="SearchStationsNotFound"/>
        </logger>

        <logger name="ExceptionsLogger" level="error" >
            <appender-ref ref="Exception"/>
        </logger>

        <root level="info">
            <appender-ref ref="SearchStations"/>
        </root>
    </loggers>
</configuration>